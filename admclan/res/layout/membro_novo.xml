<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<RelativeLayout
	    android:id             = "@+id/relativeLayout1"
	    android:layout_width   = "match_parent"
	    android:layout_height  = "wrap_content"
	    android:paddingTop     = "2dp"
	    android:layout_gravity = "bottom" >
	   
		<TextView
	            android:id                     = "@+id/lbMembros"
	            android:layout_width           = "wrap_content"
	            android:layout_height          = "38dp"
	            android:textSize               = "18sp"
	    		android:textColor	           = "#0000FF"
	    		android:textStyle	           = "bold"
	    		android:layout_marginLeft      = "10dp"
	            android:gravity                = "center"
	       		android:layout_alignParentLeft = "true"
	            android:text                   = "Novo Membro" />

		<Button
		    android:layout_width            = "50dp"
		    android:layout_height           = "38dp"
		    android:layout_alignParentRight = "true"
		    android:background              = "@null"
		    android:gravity                 = "center"
		    android:text                    = "OK"
		    android:textSize                = "14sp"
		    android:textStyle               = "normal" />
	    
	</RelativeLayout>
	
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"> 

		<TextView 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Apelido:"
    		android:gravity="right"/>

		<EditText 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:id ="@+id/txApelido"
    		android:layout_marginLeft="15dip"/>	    
	</LinearLayout>
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"> 			    
		<TextView 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Nome:"
    		android:gravity="right"/>

		<EditText 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:id ="@+id/txNome"
    		android:layout_marginLeft="15dip"/>
	</LinearLayout>
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"> 			    
		<TextView 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Email:"
    		android:gravity="right"/>

		<EditText 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:id ="@+id/txEmail"
    		android:layout_marginLeft="15dip"/>
	</LinearLayout>
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"> 			    
		<TextView 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Senha:"
    		android:gravity="right"/>

		<EditText 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:id ="@+id/txSenha"
    		android:layout_marginLeft="15dip"/>
	</LinearLayout>
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"> 			    
		<TextView 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="WhatsApp:"
    		android:gravity="right"/>

		<EditText 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:id ="@+id/txTelefone"
    		android:layout_marginLeft="15dip"/>
	</LinearLayout>
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"> 			    
		<TextView 
    		android:layout_width="20dip"
    		android:layout_height="wrap_content"
    		android:text="CV:"
    		android:gravity="right"/>

		<EditText 
    		android:layout_width="50dip"
    		android:layout_height="wrap_content"
    		android:id ="@+id/txCV"/>
		<TextView 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Experiência:"/>
		<EditText 
    		android:layout_width="50dip"
    		android:layout_height="wrap_content"
    		android:id ="@+id/txExperiencia"
    		android:layout_marginLeft="15dip"/>
	</LinearLayout>
	
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp">
		
	    
	    <Button 
	        android:id="@+id/btNascimento"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""  />

		<DatePicker
		    android:id="@+id/dpNascimento"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		
	</LinearLayout>
		<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"> 			    
		<TextView 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Observação:"
    		android:gravity="right"/>

		<EditText 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:id ="@+id/txObservacao"
    		android:layout_marginLeft="15dip"/>

	</LinearLayout>

	>

</LinearLayout>